{
    "name": "helix",
    "url": "https://github.com/helix-editor/helix",
    "version": "22.12",
    "config": {
        "type": "archive",
        "url": "{{.this.url}}/releases/download/{{.this.version}}/{{.this.name}}-{{.this.version}}-{{.chezmoi.arch}}-{{.chezmoi.os}}.tar.xz",
        "exact": true,
        "stripComponents": 1,
        "refreshPeriod": "168h"
    },
    "remap": {
        ".chezmoi.os": {
            "darwin": "macos",
            "linux": "linux"
        },
        ".chezmoi.arch": {
            "amd64": "x86_64",
            "arm64": ""
        }
    }
}
