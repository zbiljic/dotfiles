{
    "name": "ssm",
    "url": "https://github.com/lfaoro/ssm",
    "version": "0.4.0",
    "config": {
        "type": "archive",
        "url": "{{.this.url}}/releases/download/{{.this.version}}/{{.this.name}}_{{.this.version}}_{{.chezmoi.os}}_{{.chezmoi.arch}}.tar.gz",
        "exact": true
    },
    "remap": {
        ".chezmoi.os": {
            "darwin": "",
            "linux": "linux"
        },
        ".chezmoi.arch": {
            "amd64": "x86_64",
            "arm64": "arm64"
        }
    },
    "condition": {
        ".chezmoi.config.data.ephemeral": false
    }
}
