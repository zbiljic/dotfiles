{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":separateMultipleMajorReleases",
    "customManagers:githubActionsVersions",
    ":semanticCommitsDisabled"
  ],
  "enabledManagers": ["custom.regex", "github-actions"],
  "minimumReleaseAge": "3 days",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Chezmoi version",
      "fileMatch": [
        ".chezmoiversion"
      ],
      "matchStrings": [
        "(?<currentValue>.*)\\s"
      ],
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "twpayne/chezmoi"
    },
    {
      "customType": "regex",
      "description": "Update GitHub packages",
      "fileMatch": [
        ".*/\\.github\\.com/.*\\.json"
      ],
      "matchStrings": [
        "\"url\":\\s?\"https://github\\.com/(?<depName>.+)\",\\s*\"version\":\\s?\"(?<currentValue>.+)\","
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "description": ["Automerge non-major updates"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeType": "branch"
    },
    {
      "matchManagers": ["custom.regex"],
      "commitMessageAction": "update",
      "commitMessageTopic": "{{depName}}"
    },
    {
      "description": ["Slowdown some updates"],
      "matchPackageNames": ["/mise/"],
      "schedule": ["before 4am on Monday"]
    }
  ]
}
