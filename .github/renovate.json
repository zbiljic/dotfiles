{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":separateMultipleMajorReleases",
    "customManagers:githubActionsVersions",
    ":semanticCommitsDisabled"
  ],
  "enabledManagers": ["custom.regex", "github-actions", "mise"],
  "minimumReleaseAge": "3 days",
  "customManagers": [
    {
      "customType": "regex",
      "description": ["Update Chezmoi version"],
      "managerFilePatterns": [
        ".chezmoiversion"
      ],
      "matchStrings": [
        "(?<currentValue>.*)\\s"
      ],
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "twpayne/chezmoi"
    },
    {
      "customType": "regex",
      "description": ["Update GitHub packages"],
      "managerFilePatterns": [
        "//\\.github\\.com/.+\\.json/"
      ],
      "matchStrings": [
        "\"url\":\\s?\"https://github\\.com/(?<depName>.+)\",\\s*\"version\":\\s?\"(?<currentValue>.+)\","
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "pep440",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": ["Update mise GitHub packages"],
      "managerFilePatterns": [
        "/(^|/)\\.?mise\\.toml$/",
        "/(^|/)\\.?mise/config\\.toml$/",
        "/(^|/)\\.?mise/conf\\.d/.+\\.toml$/"
      ],
      "matchStrings": [
        "\"github:(?<depName>[^\"]+)\"\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "versioningTemplate": "pep440",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "description": ["Automerge non-major updates"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeType": "branch"
    },
    {
      "matchManagers": ["custom.regex"],
      "commitMessageAction": "update",
      "commitMessageTopic": "{{depName}}"
    },
    {
      "description": ["Slowdown some updates"],
      "matchPackageNames": ["/mise/", "/critique/"],
      "schedule": ["before 4am on Monday"]
    }
  ],
  "mise": {
    "managerFilePatterns": [
      "/(^|/)\\.?mise\\.toml$/",
      "/(^|/)\\.?mise/config\\.toml$/",
      "/(^|/)\\.?mise/conf\\.d/.+\\.toml$/"
    ]
  }
}
